<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.lv6.CalculatorController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <TextField fx:id="display"/>

    <HBox spacing="20" alignment="CENTER">
        <Button text="7" onAction="#numberButtonClicked"/>
        <Button text="8" onAction="#numberButtonClicked"/>
        <Button text="9" onAction="#numberButtonClicked"/>
        <Button text="+" onAction="#operatorButtonClicked"/>
        <Button text="*" onAction="#operatorButtonClicked"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="4" onAction="#numberButtonClicked"/>
        <Button text="5" onAction="#numberButtonClicked"/>
        <Button text="6" onAction="#numberButtonClicked"/>
        <Button text="-" onAction="#operatorButtonClicked"/>
        <Button text="/" onAction="#operatorButtonClicked"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="1" onAction="#numberButtonClicked"/>
        <Button text="2" onAction="#numberButtonClicked"/>
        <Button text="3" onAction="#numberButtonClicked"/>
        <Button text="C" onAction="#clearButtonClicked"/>
        <Button text="." onAction="#operatorButtonClicked"/>
    </HBox>

    <HBox spacing="20" alignment="CENTER">
        <Button text="0" onAction="#numberButtonClicked"/>
        <Button text="=" onAction="#equalsButtonClicked"/>
    </HBox>

</VBox>
