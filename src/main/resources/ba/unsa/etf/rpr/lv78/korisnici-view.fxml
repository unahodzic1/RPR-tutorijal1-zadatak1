<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>

<GridPane xmlns:fx="http://javafx.com/fxml"
           hgap="4.0" vgap="4.0">

        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>

    <children>
        <ListView fx:id="listView" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.rowSpan="7" prefWidth="200" prefHeight="100" />

        <Label text="Ime: " GridPane.rowIndex="0" GridPane.columnIndex="3" />
        <TextField fx:id="imeKorisnika" GridPane.rowIndex="0" GridPane.columnIndex="4" GridPane.columnSpan="2"/>

        <Label text="Prezime: " GridPane.rowIndex="1" GridPane.columnIndex="3" />
        <TextField fx:id="prezimeKorisnika" GridPane.rowIndex="1" GridPane.columnIndex="4" GridPane.columnSpan="2"/>

        <Label text="E-mail: " GridPane.rowIndex="2" GridPane.columnIndex="3" />
        <TextField fx:id="emailKorisnika" GridPane.rowIndex="2" GridPane.columnIndex="4" GridPane.columnSpan="2"/>

        <Label text="Korisnicko ime: " GridPane.rowIndex="3" GridPane.columnIndex="3" />
        <TextField fx:id="korisnickoIme" GridPane.rowIndex="3" GridPane.columnIndex="4" GridPane.columnSpan="2" />

        <Label text="Lozinka: " GridPane.rowIndex="4" GridPane.columnIndex="3" />
        <PasswordField fx:id="passwordKorisnika" GridPane.rowIndex="4" GridPane.columnIndex="4" GridPane.columnSpan="2"/>

        <Button fx:id="dodajBtn" text="Dodaj" onAction="#dodajKorisnika" GridPane.rowIndex="5" GridPane.columnIndex="4" prefHeight="10" prefWidth="80"/>
        <Button fx:id="krajBtn" text="Kraj" onAction="#krajPrograma" GridPane.rowIndex="5" GridPane.columnIndex="5" prefHeight="10" prefWidth="80"/>
    </children>

</GridPane>

